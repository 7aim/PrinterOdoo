<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Purchase Order Form View -->
        <record id="view_purchase_order_form_inherit_printer" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.printer</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_print_purchase_invoice" 
                            string="Print Invoice" 
                            type="object"                       
                            class="btn-secondary"/>
                            <!-- invisible="[('state', 'not in', ['purchase', 'done'])]" -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>